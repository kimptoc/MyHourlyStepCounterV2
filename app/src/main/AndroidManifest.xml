<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for step sensor access -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <!-- Notification permission (Android 13+) - still requires runtime grant -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Permissions for WorkManager and foreground service -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_HEALTH" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/step_counter_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/step_counter_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyHourlyStepCounterV2">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyHourlyStepCounterV2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Foreground service for permanent step counter notification -->
        <service
            android:name=".services.StepCounterForegroundService"
            android:foregroundServiceType="health"
            android:exported="false" />

        <!-- Receiver to (re)start service on boot if enabled -->
        <receiver
            android:name=".receivers.BootReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Receiver for step reminder alarms -->
        <receiver
            android:name=".notifications.StepReminderReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.myhourlystepcounterv2.ACTION_STEP_REMINDER" />
            </intent-filter>
        </receiver>

        <!-- Receiver for hour boundary alarms (XX:00) -->
        <receiver
            android:name=".notifications.HourBoundaryReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.myhourlystepcounterv2.ACTION_HOUR_BOUNDARY" />
                <action android:name="com.example.myhourlystepcounterv2.ACTION_BOUNDARY_CHECK" />
            </intent-filter>
        </receiver>
    </application>

</manifest>